<MyRoot>:

    status: status
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            pos:self.pos
            size:self.size

    BoxLayout:

        orientation: "vertical"
        Label: 
            text: "GAYDAR"
            font_size: 64
            color: 0.92, 0.45, 0, 1
        Label:
            id: status
            text: "Point at Potential Gayboy"
            color: 0,0,0,1
            font_size: 64
        RoundedButton:
            pos_hint: {'center_x' : 0.5}
            size_hint: {1, .3}
            text: "Generate"
            font_size: 32
            size: 20, 20
            color: 1,1,1,1
            on_press: root.start_press()
            on_release: root.displayGay()

<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (0,0,0.8,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [58]
